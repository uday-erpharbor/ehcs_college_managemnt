<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="subject_form_view" model="ir.ui.view">
		<field name="name">course.course.form</field>
		<field name="model">course.course</field>
		<field name="arch" type="xml">
			<form name="Course">
				<sheet>
					<group>
						<group>
							<field name="name"/>
						</group>
					</group>
				</sheet>
			</form>
		</field> 
	</record>

	

	<record id="bca_action" model="ir.actions.act_window"> 
		<field name="name">Course</field>
		<field name="res_model">course.course</field>
		<field name="view_mode">tree,form</field>
	</record>


	

	

	

</odoo>